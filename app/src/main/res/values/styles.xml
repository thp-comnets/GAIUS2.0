<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Override the dropdown item in support library -->
        <item name="spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="popupTheme">@style/ThemeOverlaySpinner</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!--hint color And Label Color in False State-->
        <item name="android:textColorHint">@color/grey_100</item>
        <item name="android:textSize">18dp</item>
        <item name="android:labelTextSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHighlight">@android:color/holo_red_dark</item>
        <item name="android:textColorLink">@android:color/holo_red_light</item>

        <!--Label color in True State And Bar Color False And True State-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/grey_100</item>
        <item name="colorControlActivated">@color/grey_100</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.AppBarOverlayWhite" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewSpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!--<item name="android:background">@color/grey_10</item>-->
    </style>
    <style name="ThemeOverlaySpinner" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="overlapAnchor">true</item>-->
        <!--<item name="android:dropDownVerticalOffset">35dp</item>-->
    </style>

    <!--I couldn't find a better way of changing the spinner style in the CreateContentadActivity-->
    <style name="AppThemeCreateAds" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Override the dropdown item in support library -->
        <item name="spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="popupTheme">@style/ThemeOverlaySpinnerLinks</item>

    </style>

    <style name="AppThemeCreateAds.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeCreateAds.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeCreateAds.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlaySpinnerLinks" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <!--<item name="overlapAnchor">true</item>-->
        <!--<item name="android:dropDownVerticalOffset">35dp</item>-->
    </style>

    <!--TODO: check if this is still used-->
    <style name="FriendTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>



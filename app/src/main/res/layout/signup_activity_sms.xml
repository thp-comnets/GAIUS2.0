<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorAccent"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/oval_shape"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logo"
            android:layout_marginTop="110dp"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:paddingEnd="8dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_avatar"
            app:civ_border_width="0dp"/>

        <LinearLayout
            android:id="@+id/enter_number_layout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_edittext"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:hint="Your name"
                android:paddingStart="20dp"
                android:drawablePadding="13dp"
                android:drawableLeft="@drawable/icon_user"
                android:background="@drawable/rounded_edittext"
                android:inputType="textAutoComplete"
                android:textSize="16sp"
                android:textColorHint="#99000000"/>

            <EditText
                android:id="@+id/channel_edittext"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:drawablePadding="13dp"
                android:drawableLeft="@drawable/icon_user"
                android:background="@drawable/rounded_edittext"
                android:textSize="16sp"
                android:hint="Your channel name"
                android:inputType="textAutoComplete"
                android:textColorHint="#99000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_57"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:text="Channel thumbnail"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/channel_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/placeholder"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/custom_signup_button"
                android:background="@drawable/signup_button"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Sign Up" />
        </LinearLayout>


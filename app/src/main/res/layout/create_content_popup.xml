<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    android:numColumns="auto_fit"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/web_card"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#ffffff"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Webpage"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/ic_web_create"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </pl.droidsonroids.gif.GifImageView>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:layout_toEndOf="@+id/web_card"
        app:cardBackgroundColor="#ffffff"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/ic_image_create"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </pl.droidsonroids.gif.GifImageView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/video_card"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:layout_below="@+id/web_card"
        app:cardBackgroundColor="#ffffff"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/ic_video_create"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </pl.droidsonroids.gif.GifImageView>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ad_card"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:layout_below="@+id/web_card"
        android:layout_toEndOf="@+id/video_card"
        app:cardBackgroundColor="#ffffff"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advertisement"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/ic_ad_create"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </pl.droidsonroids.gif.GifImageView>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
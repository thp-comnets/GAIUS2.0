<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/newsfeed_header"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatarView"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:civ_fill_color="#dddddd"
            app:civ_border_color="#dddddd"
            android:src="@drawable/ic_avatar_gray"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:id="@+id/upload_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avatarView"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="55dp"
            android:orientation="vertical">

            <View
                android:id="@+id/textViewName"
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:background="#dddddd"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/textViewUpdateTime"
                    android:layout_width="90dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:background="#dddddd" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/circle_gray" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/like"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="20dp"
            android:background="#dddddd"/>

    </RelativeLayout>

    <View
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="#65DDDDDD"/>

    <RelativeLayout
        android:id="@+id/newsfeed_footer"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="55dp"
            android:orientation="vertical">

            <View
                android:id="@+id/textViewTitle"
                android:layout_width="120dp"
                android:layout_height="13dp"
                android:layout_marginStart="21dp"
                android:background="#dddddd" />

            <View
                android:id="@+id/textViewDescription"
                android:layout_width="90dp"
                android:layout_height="12dp"
                android:layout_below="@+id/textViewTitle"
                android:layout_marginStart="21dp"
                android:layout_marginTop="2dp"
                android:background="#dddddd"/>

        </LinearLayout>

        <View
            android:id="@+id/share"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="20dp"
            android:background="#dddddd"/>
    </RelativeLayout>

</LinearLayout>
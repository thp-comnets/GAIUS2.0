<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/colorAccent"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/oval_shape"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"/>

        <ImageView
            android:id="@+id/logo2a"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/oval_shape"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"/>

        <ImageView
            android:id="@+id/logo3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/gaius_logo"
            android:layout_marginStart="130dp"
            android:layout_marginTop="65dp"/>


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginTop="120dp"
            android:gravity="center_vertical"
            android:fitsSystemWindows="true">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Enter your mobile number"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/message2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Did you enter the correct mobile number?"
                android:textColor="@color/orange_200"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_below="@+id/message"
                />


            <android.support.v7.widget.CardView
                android:id="@+id/phoneCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/grey_50"
                android:layout_below="@+id/message">

                <net.rimoto.intlphoneinput.IntlPhoneInput
                    android:id="@+id/my_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:textSize="18sp"
                    app:flagPaddingEnd="10dp"
                    />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/switch_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:text="Server:"
                android:visibility="gone"
                android:layout_below="@+id/phoneCard"/>

            <Spinner
                android:id="@+id/server_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:spinnerMode="dropdown"
                android:visibility="gone"
                android:layout_below="@+id/switch_server"/>

            <com.mukesh.OtpView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:itemBackground="@color/white_50"
                android:textColor="@android:color/black"
                app:itemCount="4"
                app:lineColor="@color/colorPrimary"
                app:viewType="rectangle"
                android:visibility="invisible"
                android:layout_below="@+id/message2"
                />

            <TextView
                android:id="@+id/resend_otp_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/orange_200"
                android:text="Resend OTP"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_below="@+id/otp_view"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/custom_signin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="custom_login_button"
                android:text="Next"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="200dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
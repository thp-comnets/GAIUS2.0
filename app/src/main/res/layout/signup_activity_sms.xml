<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logo"
            android:layout_marginTop="20dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="4dp"
            app:civ_border_color="#000000"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_avatar"
            app:civ_border_width="3dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/logo"
            android:gravity="center_vertical"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:theme="@style/TextLabel"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"
                    android:hint="Name"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/channel_text_input_layout"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/channel_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"
                    android:hint="Channel name"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:id="@+id/channel_image_input_layout"
                android:theme="@style/TextLabel">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Channel thumbnail"
                    android:layout_marginBottom="20dp"
                    />

                <ImageView
                    android:id="@+id/channel_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/placeholder"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/custom_signup_button"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:tag="custom_login_button"
                android:layout_margin="16dp"
                android:text="Sign up"
                android:textSize="18dp"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>

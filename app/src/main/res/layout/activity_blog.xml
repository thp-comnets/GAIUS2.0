<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/simple_recylcerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        tools:layout_editor_absoluteX="745dp"
        tools:layout_editor_absoluteY="-51dp"
        />

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/text_header_card"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff">

                <ImageView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/headingButton"
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_heading">
                </ImageView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="19dp"
                    android:text="Heading"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="#11000000"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/text_paragraph_card"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff">

                <ImageView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/paragraphButton"
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_pargraph">
                </ImageView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="19dp"
                    android:text="Paragraph"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="#11000000"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/image_card"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff">

                <ImageView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/imageButton"
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_image">
                </ImageView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="19dp"
                    android:text="Image"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="#11000000"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/video_card"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_video">
                </ImageView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="19dp"
                    android:text="Video"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"

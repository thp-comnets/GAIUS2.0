<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/simple_recylcerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="745dp"
        tools:layout_editor_absoluteY="-51dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/simple_recylcerView"
        android:layout_gravity="center"
        app:layout_behavior="com.gaius.gaiusapp.utils.FixedBottomViewBehavior"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/image_card"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#ffffff">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_image_create">
            </pl.droidsonroids.gif.GifImageView>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/video_card"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#ffffff">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/videoButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_video_create">
            </pl.droidsonroids.gif.GifImageView>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/text_card"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#ffffff">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/textButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_create">
            </pl.droidsonroids.gif.GifImageView>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>